# elements = soup.find(data-stat_ == 'college_name')


for player in player_stats_url:
    response = requests.get(
        'https://www.basketball-reference.com/players/b/banchpa01.html')
    html_content = response.text
    soup = BeautifulSoup(html_content, "html.parser")
    player_name = soup.find('h1')
    player_points = soup.find('td', attrs={"data-stat": 'pts_per_g'})
    player_rebounds = soup.find('td', attrs={"data-stat": 'trb_per_g'})
    player_assists = soup.find('td', attrs={"data-stat": "ast_per_g"})
    if player_points is not None:
        points_number = float(player_points.text)
        rebounds_number = float(player_rebounds.text)
        assists_number = float(player_assists.text)
        total_number = points_number + rebounds_number + assists_number
        print(f"{player_name.text} Average Points Per Game - {points_number}; Average Rebounds Per Game - {rebounds_number}; Average Assists Per Game - {assists_number}; Total: {total_number}")
    else:
        print("Player data not found")


'''
Testing for small goal 

College = soup.find_all("td", attrs={"data-stat": "college_name"})
Duke = soup.find_all("a", string="Duke")
LSU = soup.find_all("a", string="LSU")

for Player in Duke:
    href = Player.get(
        "https://www.basketball-reference.com/friv/draft.fcgi?college=duke")
    text = Player.get_text()
    print("Duke")


for Player in LSU:
    href = Player.get(
        "https://www.basketball-reference.com/friv/draft.fcgi?college=lsu")
    text = Player.get_text()
    print("LSU")


print(table.get_text())

